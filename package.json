{
  "devDependencies": {
    "@types/web-bluetooth": "^0.0.21",
    "esbuild": "^0.27.2",
    "puppeteer": "^24.34.0",
    "ts-node": "^10.9.2",
    "vitest": "^4.0.16"
  },
  "type": "module",
  "scripts": {
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "build": "ts-node esbuild.config.ts --profile=release",
    "build-min": "ts-node esbuild.config.ts --profile=release-min",
    "build-dev": "ts-node esbuild.config.ts --profile=dev --watch",
    "test": "npm run build && vitest",
    "test-nobuild": "vitest"
  },
  "dependencies": {
    "@parcel/watcher": "^2.5.4",
    "source-map": "^0.7.6"
  }
}
